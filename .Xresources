! Remove scrollbar
URxvt.scrollBar: false

! Font selection
URxvt.font: xft:inconsolata:size=11

! Make fonts look a bit nicer
!Xft*dpi: 96
Xft*autohint: 0
Xft*lcdfilter: lcddefault
Xft*hintstyle: hintfull
Xft*hinting: 1
Xft*antialias: 1
Xft*rgba: rgb

! Some neat colors
URxvt*foreground: #CCCCCC
URxvt*background: #111111
!black
*color0: #222222
*color8: #666666
!red
*color1: #E84F4F
*color9: #D23D3D
!green
*color2: #B7CE42
*color10: #BDE077
!yellow
*color3: #FEA63C
*color11: #FFE863
!blue
*color4: #66A9B9
*color12: #AACCBB
!magenta
*color5: #B7416E
*color13: #E16A98
!cyan
*color6: #6D878D
*color14: #42717B
!white
*color7: #CCCCCC
*color15: #FFFFFF

